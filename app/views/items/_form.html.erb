<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price, "商品価格" %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :price, "利益（商品価格✕0.9）" %>
    <div style="display:table-cell; width: 10rem; height:2rem; border-bottom: 1px solid black; text-align:right; vertical-align: bottom;"></div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
